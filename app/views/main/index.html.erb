<%= render 'element/header' %>
<div class="container">
	<h1 class="center">Movie Ticketing</h1>
	<div class="row">
		<div class="col s12">
			<%= link_to '<i class="fa fa-cogs left" aria-hidden="true"></i> Movie'.html_safe, movies_path, :class => 'waves-effect waves-light btn right grey darken-3 grey-text text-lighten-2' %>
		</div>
	</div>
	<div class="row">
		<% @movies.each do |movie| %>
			<div class="cols 12 card grey darken-2 grey-text text-lighten-2">
				<div class="card-content">
					<span class="card-title yellow-text text-lighten-3"><strong><%= movie.name %></strong></span>
					<i class="fa fa-clock-o" aria-hidden="true"></i> : <%= movie.time %> Minute<br><br>
					<strong><i class="fa fa-pencil" aria-hidden="true"></i> Description</strong> : <%= movie.desc %>
				</div>
				<div class="card-action">
					<%= link_to 'See Schedule <i class="fa fa-chevron-circle-right right" aria-hidden="true"></i>'.html_safe, movie_path(movie), :class => 'btn grey darken-3 grey-text text-lighten-3' %>
				</div>
			</div>
		<% end %>
	</div> 
</div>
<%= render 'element/footer' %>